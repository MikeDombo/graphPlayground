{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "allowJs": false,
        "sourceMap": true,
        "strict": true,
        "lib": ["dom", "es7", "scripthost"],
        "baseUrl": ".",
        "paths": {
            "vis/index-network": ["./node_modules/@types/vis/index.d.ts"]
        },
        "moduleResolution": "node"
    },
    "compileOnSave": false,
    "include": ["./src/**/*.ts", "./test/**/*.ts"],
    "exclude": ["./src/js/workers/*.ts"],
    "files": ["node_modules/immutable/dist/immutable.d.ts"]
}
